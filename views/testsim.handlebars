<div class="container">
    {{#if homeTeam}}
    {{#if awayTeam}}
    <div class="row  pt-5">
        <div class="col-12 text-center">
            <button class="btn btn-success btn-lg" id="runGame">Run Game</button>
        </div>
    </div>
    {{/if}}
    {{/if}}
    <div class="row py-5">
        <div class="col-6 text-center">
            <div class="dropdown">
                <button 
                    class="btn btn-secondary dropdown-toggle" 
                    type="button" 
                    id="homeTeamMenuButton" 
                    {{#if homeTeam}} data-teamid="{{homeTeam.id}}"{{/if}}
                    data-bs-toggle="dropdown" 
                    aria-expanded="false">
                        {{#if homeTeam}}
                            {{homeTeam.name}}
                        {{else}}
                            Home Team
                        {{/if}}
                </button>
                <ul class="dropdown-menu" aria-labelledby="homeTeamMenuButton">
                    {{#each userTeams as |team|}}
                        <li><a class="dropdown-item py-0 my-1 home-team-select" data-teamid="{{team.id}}" href="#">{{team.name}}</a></li>
                    {{/each}}
                </ul>
            </div>
            <div id="home-player-list" class="my-2">
                {{#each homeTeam.players as |player|}}
                <div class="card mb-3">
                    <div class="row no-gutters">
                        <div class="col-md-2">
                            <img src="{{player.img_url}}" class="img-thumbnail" alt="...">
                        </div>
                        <div class="col-md-5">
                            <div class="card-body">
                                <h5 class="card-title">{{player.player_name}}</h5>
                                <p class="card-text"></p>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="col-6 text-center">
            <button 
                class="btn btn-secondary dropdown-toggle" 
                type="button" 
                id="awayTeamMenuButton"
                {{#if awayTeam}} data-teamid="{{awayTeam.id}}"{{/if}}
                data-bs-toggle="dropdown" 
                aria-expanded="false">
                    {{#if awayTeam}}
                        {{awayTeam.name}}
                    {{else}}
                        Away Team
                    {{/if}}
            </button>
            <ul class="dropdown-menu" aria-labelledby="awayTeamMenuButton">
                {{#each userTeams as |team|}}
                    <li><a class="dropdown-item py-0 my-1 away-team-select" data-teamid="{{team.id}}" href="#">{{team.name}}</a></li>
                {{/each}}
            </ul>
            <div id="away-player-list" class="my-2">
                {{#each awayTeam.players as |player|}}
                <div class="card mb-3">
                    <div class="row no-gutters">
                        <div class="col-md-2">
                            <img src="{{player.img_url}}" class="img-thumbnail" alt="...">
                        </div>
                        <div class="col-md-5">
                            <div class="card-body">
                                <h5 class="card-title">{{player.player_name}}</h5>
                                <p class="card-text"></p>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

