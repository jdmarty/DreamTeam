<div class="container-fluid px-0 px-md-2">

    <div class="row pt-4 py-4 pb-4 pb-md-0">

        <div class="col-12 text-center">
            {{#if ready}}
            <button class="btn btn-success btn-lg simButton" id="runGame">Run Game</button>
            <a href="/testsim" class="btn btn-danger btn-lg sim-button">Reset</a>
            {{else}}
            <div class="sim-select-banner mb-2">
                <h1 class="display-4">Select Your Teams</h1>
            </div>
            {{/if}}
        </div>

    </div>

    <div class="row d-flex justify-content-center">
        {{!-- Home Team Side --}}
        <div class="col-md-3 col-6 order-2 order-md-1 text-center px-0 px-md-2">
            {{!-- Home Team Dropdown --}}
            <div class="dropdown">
                <button 
                    class="btn btn-secondary dropdown-toggle sim-dropdown" 
                    type="button" 
                    id="homeTeamMenuButton" 
                    {{#if homeTeam}} data-teamid="{{homeTeam.id}}"{{/if}}
                    data-bs-toggle="dropdown" 
                    aria-expanded="false">
                        {{#if homeTeam}}
                            {{homeTeam.name}}
                        {{else}}
                            Home Team
                        {{/if}}
                </button>
                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="homeTeamMenuButton">
                    {{#each userTeams as |team|}}
                        <li><a class="dropdown-item my-1 home-team-select" data-teamid="{{team.id}}" href="#">{{team.name}}</a></li>
                    {{/each}}
                </ul>
            </div>
            {{!-- Home Team Players --}}
            <div id="home-player-list container" class="my-2">
                {{#each homeTeam.players as |player|}}

                <div class="row sim-player-card rounded m-3">
                    <div class="col-4 d-none d-md-flex my-0 my-md-auto p-0 px-xxl-4 px-xl-3 px-lg-2">
                        {{#if player.img_url}}
                        <img src="{{player.img_url}}" class="img-thumbnail" alt="{{player.player_name}}">
                        {{else}}
                        <img src="https://ak-static.cms.nba.com/wp-content/uploads/headshots/nba/latest/260x190/logoman.png" class="img-thumbnail" alt="{{player.player_name}}">
                        {{/if}}
                    </div>
                    <div class="col-md-8 col-12" data-playerId="{{player.id}}H">
                        <h5 class="mt-2 sim-player-name">{{player.player_name}}</h5>
                        <p>Points:</p>
                    </div>
                </div>

                {{/each}}
            </div>
        </div>
        {{#if homeTeam}}
        {{#if awayTeam}}
        {{!-- Game Zone Here --}}
        <div class="col-md-6 col-12 order-1 order-md-3 d-flex justify-content-center mb-2 backdrop">
            <img src="https://pixfeeds.com/images/basketball/1280-538482034-wooden-basketball-court.jpg" class="img-fluid center" alt="court">
            {{!-- Scoreboard --}}
            <div class="scoreboard container-fluid">
                <div class="row">
                    <div class="col-6 text-center">
                        <h1 class="board-text">Home</h1>
                        <span class="score-text">100</span>
                    </div>
                    <div class="col text-center">
                        <h1 class="board-text">Away</h1>
                        <span class="score-text">99</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 text-center">
                        <h1 class="board-text">Home Team Wins!</h1>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
        {{/if}}
        {{!-- Away Team Side --}}
        <div class="col-md-3 col-6 order-3 text-center px-0 px-md-2">
            {{!-- Away Team Dropdown --}}
            <button 
                class="btn btn-secondary dropdown-toggle" 
                type="button" 
                id="awayTeamMenuButton"
                {{#if awayTeam}} data-teamid="{{awayTeam.id}}"{{/if}}
                data-bs-toggle="dropdown" 
                aria-expanded="false">
                    {{#if awayTeam}}
                        {{awayTeam.name}}
                    {{else}}
                        Away Team
                    {{/if}}
            </button>
            {{!-- Away Team Players --}}
            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="awayTeamMenuButton">
                {{#each userTeams as |team|}}
                    <li><a class="dropdown-item my-1 away-team-select" data-teamid="{{team.id}}" href="#">{{team.name}}</a></li>
                {{/each}}
            </ul>
            <div id="away-player-list" class="my-2">
                {{#each awayTeam.players as |player|}}

                <div class="row sim-player-card rounded m-3">
                    <div class="col-4 d-none d-md-flex my-0 my-md-auto p-0 px-xxl-4 px-xl-3 px-lg-2">
                        <img src="{{player.img_url}}" class="img-thumbnail sim-player-image" alt="{{player.player_name}}">
                    </div>
                    <div class="col-md-8 col-12" data-playerId="{{player.id}}A">
                        <h5 class="mt-2 sim-player-name">{{player.player_name}}</h5>
                        <p>Points:</p>
                    </div>
                </div>

                {{/each}}
            </div>
        </div>
    </div>
</div>

{{!-- Include jQuery --}}
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
