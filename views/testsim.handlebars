<div class="container">
    {{#if homeTeam}}
    {{#if awayTeam}}
    <div class="jumbotron jumbotron-fluid collapse" id="scoreboard">
        <div class="container-fluid">
            <h1 class="display-4 text-center">FINAL SCORE</h1>
            <div class="row d-flex justify-content-center">
                <div class="col-6 text-center">
                    <h1>{{homeTeam.name}}</h1>
                    <p class="lead" id="home-final">120</p>
                </div>
                <div class="col-6 text-center">
                    <h1>{{awayTeam.name}}</h1>
                    <p class="lead" id="away-final">120</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row pt-4">
        <div class="col-12 text-center">
            <button class="btn btn-success btn-lg" id="runGame">Run Game</button>
        </div>
    </div>
    {{/if}}
    {{/if}}
    <div class="row py-4">
        <div class="col-6 text-center">
            <div class="dropdown">
                <button 
                    class="btn btn-secondary dropdown-toggle" 
                    type="button" 
                    id="homeTeamMenuButton" 
                    {{#if homeTeam}} data-teamid="{{homeTeam.id}}"{{/if}}
                    data-bs-toggle="dropdown" 
                    aria-expanded="false">
                        {{#if homeTeam}}
                            {{homeTeam.name}}
                        {{else}}
                            Home Team
                        {{/if}}
                </button>
                <ul class="dropdown-menu" aria-labelledby="homeTeamMenuButton">
                    {{#each userTeams as |team|}}
                        <li><a class="dropdown-item py-0 my-1 home-team-select" data-teamid="{{team.id}}" href="#">{{team.name}}</a></li>
                    {{/each}}
                </ul>
            </div>
            <div id="home-player-list container" class="my-2">
                {{#each homeTeam.players as |player|}}

                <div class="row bg-white rounded m-3">
                    <div class="col-md-2 my-auto px-auto">
                        <img src="{{player.img_url}}" class="img-thumbnail d-none d-lg-block my-auto" alt="...">
                    </div>
                    <div class="col-md-10" data-playerId="{{player.id}}H">
                        <h4 class="mt-2">{{player.player_name}}</h4>
                        <p>Points:</p>
                    </div>
                </div>

                {{/each}}
            </div>
        </div>
        <div class="col-6 text-center">
            <button 
                class="btn btn-secondary dropdown-toggle" 
                type="button" 
                id="awayTeamMenuButton"
                {{#if awayTeam}} data-teamid="{{awayTeam.id}}"{{/if}}
                data-bs-toggle="dropdown" 
                aria-expanded="false">
                    {{#if awayTeam}}
                        {{awayTeam.name}}
                    {{else}}
                        Away Team
                    {{/if}}
            </button>
            <ul class="dropdown-menu" aria-labelledby="awayTeamMenuButton">
                {{#each userTeams as |team|}}
                    <li><a class="dropdown-item py-0 my-1 away-team-select" data-teamid="{{team.id}}" href="#">{{team.name}}</a></li>
                {{/each}}
            </ul>
            <div id="away-player-list" class="my-2">
                {{#each awayTeam.players as |player|}}

                <div class="row bg-white rounded m-3">
                    <div class="col-md-2 my-auto px-auto">
                        <img src="{{player.img_url}}" class="img-thumbnail d-none d-lg-block my-auto" alt="...">
                    </div>
                    <div class="col-md-10" data-playerId="{{player.id}}A">
                        <h4 class="mt-2">{{player.player_name}}</h4>
                        <p>Points:</p>
                    </div>
                </div>

                {{/each}}
            </div>
        </div>
    </div>
</div>

